<div class="hero">
{% include "widget/navbar.njk" %}
    <div class="grid-containers">
        <div class="container hero-content">
            <h1>{{title}}</h1>
            <div class="metadata">
                <span>In {%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                    <a href="{{ tagUrl }}" class="text-white">{{ tag }}</a>{% endfor %}
                    </span>
                {% if author %}<span>by {{author}}</span>{% endif %}
                <span><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></span>
            </div>
            <div class="full-width-image"></div>
        </div>
        <div class="quote">"</div>
    </div>
</div>
<style>.full-width-image {width: 100%;height: 360px;background-image: url('{{image}}');background-size: cover;background-position: center;border-radius: 10px;margin-top: var(--spacing-md);}</style>
<script>function adjustGridSize() {const vmin = Math.min(window.innerWidth, window.innerHeight) / 100;document.documentElement.style.setProperty('--grid-size', `${25 * vmin}px`);}window.addEventListener('resize', adjustGridSize);adjustGridSize();</script>