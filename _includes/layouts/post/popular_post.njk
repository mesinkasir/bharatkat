<div class="col-md-4 p-3 p-md-5 mb-5">
<h3>{{metadata.post_widget.popular}}</h3>
{% for post in collections.popular | reverse | limit(3) %}
<div class="mt-5">
{% if post.data.image %}<a href="{{post.url}}" title="{{post.data.title}}"><img class="img_popular_article" alt="{{post.data.title}}" src="{{post.data.image}}"></a>{% endif %}
<h3 class="popular_post_title mt-3 col-md-12 col-11"><a href="{{post.url}}">{{post.data.title}}</a></h3>
<p class="mt-3 popular_post_description">{{post.data.description}}</p>
</div>
{% endfor %}
</div>