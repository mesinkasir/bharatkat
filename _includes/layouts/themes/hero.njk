<div class="hero">
{% include "widget/navbar.njk" %}
    <div class="grid-containers">
        <div class="container hero-content">
            <h1><a href="{{page.url}}" class="text-white">{{title}}</a></h1>
            <div class="metadata">
                <span>In 
                    <a href="/tags/ourprojects" class="text-white">projects</a>
                    </span>
                <span>for{%- for tag in tags | filterTagList %}{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %} <a href="{{ tagUrl }}" class="text-white ms-1 me-1">{{tag}}</a></span>{% endfor %}
                <span>on <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></span>
            </div>
            <div class="full-width-image"></div>
        </div>
        <div class="quote">"</div>
    </div>
</div>

