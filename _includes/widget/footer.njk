<footer class="container-fluid">
<div class="container">
<div class="row mt-5">
<div class="col-md-6 p-3 p-md-5">
<img class="img-footer-logo" alt="{{metadata.title}}" loading="lazy" 
src="{{metadata.footer.logo}}"/>
<p class="footer_info mt-3 col-md-8">
{{metadata.footer.info}}
</p>
<nav class="nav mt-3">
{% for s in metadata.footer.social %}
<a  href="{{s.link}}" class="nav-link" title="{{s.nav}}">
<img class="social-icon" alt="{{s.nav}}" 
src="{{s.icon}}"/>
</a>
{% endfor %}
</nav>
</div>
<div class="col-md-6 p-3 p-md-5 text-center">
<nav class="nav">
{% for n in metadata.footer.navlist %}
<a href="{{n.link}}" class="footer-nav nav-link">
{{n.nav}}
</a>
{% endfor %}
</nav>
</div>
</div>
<div class="footer_copyrights col-md-10 col-12 mx-auto">
<span class="footer_copyrights_text text-center">
{{metadata.copyrights}}
</span>
</div>
</div>
</footer>
<script src="/js/main.js"></script>