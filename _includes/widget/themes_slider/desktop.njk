<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/><script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
<div class="mb-5 desktop">
<swiper-container class="mySwiper" pagination="true" pagination-clickable="true" slides-per-view="3" space-between="60" free-mode="true"
style="--swiper-pagination-color: #d67460;">
{% for blog in collections.jamstackthemes | reverse | limit(9) %}
<swiper-slide class="mb-3  text-start">
<div>
{% if blog.data.image %}
<a href="{{blog.url}}" title="{{blog.data.title}}" title="{{blog.data.title}}">
<img class="img-posting" alt="{{blog.data.title}}" src="{{blog.data.image}}"/>
</a>
{% endif %}
<div>
<h3 class="blog-list-title mt-3"><a href="{{blog.url}}" title="{{blog.data.title}}">{{blog.data.title}}</a></h3>
<p class="blog-list-article ">{{blog.data.description}}</p>
</div>
</div>
</swiper-slide>
{% endfor %}
</swiper-container>
</div>
